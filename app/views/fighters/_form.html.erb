<%= form_for(@fighter) do |f| %>
  <% if @fighter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fighter.errors.count, "error") %> prohibited this fighter from being saved:</h2>

      <ul>
      <% @fighter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :exp_points %><br>
    <%= f.text_field :exp_points %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :picture %>
  </div>
  
  <h3>Skills</h3>
  <div id="skills">
    <%= f.fields_for :skills do |skill| %>
      <%= render 'skill_fields', f: skill %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add skill', f, :skills %>
    </div>
  </div>
  <%= f.submit %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

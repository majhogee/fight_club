<p id="notice"><%= notice %></p>

<h1>Listing Skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Fighter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.level %></td>
        <td><%= skill.fighter %></td>
        <td><%= link_to 'Show', fighter_skill_path(skill.fighter_id, skill.id) %></td>
        <td><%= link_to 'Edit', edit_fighter_skill_path(skill.fighter_id, skill.id) %></td>
        <td><%= link_to 'Destroy', fighter_skill_path(skill.fighter_id, skill.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

